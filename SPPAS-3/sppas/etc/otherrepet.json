{
  "id": "otherrepet",
  "name": "Other-Repetitions",
  "descr": "Searches for sources and echos of two speakers. Requires time-aligned tokens of two speakers in two different files.",
  "required": "alignment",
  "api": "sppasOtherRepet",

  "anntype": [
    "INTERACTION"
  ],

  "resources": [
    {
      "path": "vocab",
      "type": "file",
      "ext": ".stp",
      "name": ""
    }
  ],

  "options": [
    {
      "id": "inputpattern",
      "type": "str",
      "value": "-palign",
      "text": "Pattern of the input files with time-aligned tokens or lemmas."
    },
    {
      "id": "outputpattern",
      "type": "str",
      "value": "-orepet",
      "text": "Pattern of the file with detected sources and echos."
    },
    {
      "id": "span",
      "type": "int",
      "value": 5,
      "text": "Span window length in number of IPUs"
    },
    {
      "id": "stopwords",
      "type": "bool",
      "value": true,
      "text": "Add stop-words estimated from the given data"
    },
    {
      "id": "alpha",
      "type": "float",
      "value": 0.5,
      "text": "Coefficient to add data-specific stop-words"
    },
    {
      "id": "allechos",
      "type": "bool",
      "value": false,
      "text": "Create a tier with all echo-token candidates"
    }
  ],

  "refs": {
    "bigi2014lrecor": "http://www.lrec-conf.org/proceedings/lrec2014/pdf/71_Paper.pdf"
  }

