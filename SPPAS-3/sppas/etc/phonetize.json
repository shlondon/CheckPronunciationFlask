{
  "id": "phonetize",
  "name": "Phonetization",
  "descr": "Converts a tokenized text into phonetic signs from a pronunciation dictionary. Requires Text Normalization result. Produces the IPUs with a grammar of phonemes.",
  "required": "textnorm",
  "api": "sppasPhon",

  "resources": [
    {
      "path": "dict",
      "type": "file",
      "ext": ".dict",
      "name": ""
    }
  ],

  "anntype": [
    "STANDALONE"
  ],

  "options": [
    {
      "id": "inputpattern",
      "type": "str",
      "value": "-token",
      "text": "Input file pattern (tokenization)"
    },
    {
      "id": "outputpattern",
      "type": "str",
      "value": "-phon",
      "text": "Output file pattern"
    },
    {
      "id": "phonunk",
      "type": "bool",
      "value": true,
      "text": "Let's try to phonetize unknown tokens"
    },
    {
      "id": "usestdtokens",
      "type": "bool",
      "value": false,
      "text": "Phonetize from standard tokens instead of faked tokens"
    }

  ],

  "refs": {
    "bigi2012lrectrs": "http://lrec-conf.org/proceedings/lrec2012/pdf/1122_Paper.pdf",
    "bigi2016lnai": "http://link.springer.com/chapter/10.1007%2F978-3-319-43808-5_30"
  }

}